<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="action_bar_border">
        <item name="android:padding">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
    </style>
    <!-- 4 buttons Style -->
    <style name="buttons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/green_500</item>
        <item name="android:background">@null</item>

    </style>

    <style name="headingBackground">
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:background">@color/light_green</item>
    </style>

    <style name="Widget.Theme.College.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

</resources>